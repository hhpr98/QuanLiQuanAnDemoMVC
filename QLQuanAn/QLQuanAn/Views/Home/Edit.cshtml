@model Tuple<List<QLQuanAn.Models.ChuoiCuaHang>,QLQuanAn.Models.CuaHang>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Quản lí quán ăn v1.0</title>
    <link rel="stylesheet" href="~/Content/css/bootstrap.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</head>
<body>
    <br />
    <h3><center><b style="color:red;">Chỉnh sửa cửa hàng</b></center></h3>
    <br />
    @using (Html.BeginForm("ConfirmEdit", "Home", new { Id = Model.Item2.ID }, FormMethod.Post))
    {
        <div class="col">
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-2">
                    <b>Tên cửa hàng</b>
                </div>
                <div class="col-md-5">
                    <input type="text" required class="form-control" name="name" value="@Model.Item2.TenCuaHang">
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-2">
                    <b>Địa chỉ</b>
                </div>
                <div class="col-md-5">
                    <input type="text" required class="form-control" name="address" value="@Model.Item2.DiaChi">
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-2">
                    <b>Doanh thu</b>
                </div>
                <div class="col-md-5">
                    <input type="number" min="0" required class="form-control" name="total" value="@Model.Item2.DoanhThu">
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-2">
                    <b>Số khách</b>
                </div>
                <div class="col-md-5">
                    <input type="number" min="0" required class="form-control" name="number" value="@Model.Item2.SoKhach">
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-2">
                    <b>Chuỗi cửa hàng</b>
                </div>
                <div class="col-md-5">
                    <select class="form-control" name="chuoi">
                        @foreach (var item in Model.Item1)
                        {
                            <option value="@item.ID">@item.TenChuoi</option>
                        };
                    </select>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6"></div>
                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary">Sửa</button>
                </div>
            </div>
        </div>
    }
</body>
</html>
